<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->

    </style>

    <style name="MainTheme" parent="Theme.AppCompat.Light">
        <item name="android:contentInsetStart">0dp</item>
        <item name="android:contentInsetEnd">0dp</item>
    </style>

    <style name="AppTheme.Dark" parent="Theme.AppCompat.NoActionBar">
        <item name="windowNoTitle">true</item>
        <item name="colorPrimary">@color/iron</item>
        <item name="colorPrimaryDark">@color/aluminum</item>
        <item name="colorAccent">@color/primary</item>

        <item name="android:windowBackground">@color/iron</item>

        <item name="colorControlNormal">@color/iron</item>
        <item name="colorControlActivated">@color/primary</item>
        <item name="colorControlHighlight">@color/primary</item>
        <item name="android:textColorHint">@color/monsoon</item>

        <item name="colorButtonNormal">@color/monsoon</item>
        <item name="android:colorButtonNormal">@color/oil</item>
    </style>

    <style name="AppTheme.Dark.Dialog" parent="Theme.AppCompat.Dialog">
        <item name="colorAccent">@color/primary_darker</item>
        <item name="android:textColorPrimary">@color/jet</item>
        <item name="android:background">@color/base</item>
    </style>

    <style name="AppTheme.RoundedCornerButton" parent="Widget.AppCompat.Button.Colored">
        <item name="android:background">@drawable/rounded_shape</item>
    </style>

    <style name="AppTheme.RoundedCornerButton2" parent="Widget.AppCompat.Button.Colored">
        <item name="android:background">@drawable/rounded_shape2</item>
        <item name="android:textAllCaps">false</item>
    </style>

    <style name="AppTheme.Dark.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.Dark.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

</resources>
