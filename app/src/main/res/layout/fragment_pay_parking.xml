<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.ontariolegalpool.olp.PayParkingFragment">

    <TextView
        android:layout_width="400dp"
        android:layout_height="100dp"
        android:text="TAKE A PICTURE\n OF THE TICKET"
        android:textSize="25sp"
        android:layout_marginTop="15dp"
        android:background="@android:color/transparent"
        android:gravity="center"
        android:textAlignment="center"
        android:fontFamily="@font/copperplategothicbold"
        android:textColor="@color/jet"
        android:layout_gravity="center_horizontal"
        />

    <ImageButton
        android:id="@+id/btn_picture"
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:layout_marginTop="170dp"
        android:layout_gravity="top"
        android:scaleType="fitCenter"
        android:src="@drawable/camera_icon"
        android:background="@android:color/transparent"
        />

    <TextView
        android:layout_width="400dp"
        android:layout_height="40dp"
        android:text="add additional ticket"
        android:textSize="20sp"
        android:layout_marginTop="250dp"
        android:background="@android:color/transparent"
        android:gravity="center"
        android:textAlignment="center"
        android:fontFamily="@font/copperplategothicbold"
        android:textColor="@color/jet"
        android:layout_gravity="top"
        />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:orientation="horizontal"
        android:layout_gravity="top"
        android:gravity="center_horizontal"
        android:layout_marginTop="310dp">

        <ImageView
            android:id="@+id/boxONE"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:layout_marginTop="5dp"
            android:layout_marginLeft="10dp"
            android:scaleType="centerInside"
            android:background="@drawable/photobox"/>
        <ImageView
            android:id="@+id/boxTWO"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:layout_marginTop="5dp"
            android:layout_marginLeft="10dp"
            android:scaleType="centerInside"
            android:background="@drawable/photobox"/>
        <ImageView
            android:id="@+id/boxTHREE"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:layout_marginTop="5dp"
            android:layout_marginLeft="10dp"
            android:scaleType="centerInside"
            android:background="@drawable/photobox"/>
        <ImageView
            android:id="@+id/boxFOUR"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:layout_marginTop="5dp"
            android:layout_marginLeft="10dp"
            android:scaleType="centerInside"
            android:background="@drawable/photobox"/>
    </LinearLayout>

    <Button
        android:id="@+id/btn_submit"
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:background="@android:color/transparent"
        android:text="SUBMIT"
        android:gravity="center"
        android:textAlignment="center"
        android:fontFamily="@font/copperplategothicbold"
        android:textColor="@color/white"
        android:textSize="40sp"
        android:layout_gravity="bottom"
        android:layout_marginBottom="90dp"
        />

    <View
        android:id="@+id/myRectangleView"
        android:layout_width="fill_parent"
        android:layout_height="110dp"
        android:layout_marginBottom="75dp"
        android:layout_gravity="bottom"
        android:background="@drawable/rectangleother"
        />

</FrameLayout>
